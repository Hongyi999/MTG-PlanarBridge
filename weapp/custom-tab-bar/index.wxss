.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 110rpx;
  background-color: #1a1a2e;
  border-top: 1rpx solid rgba(201, 169, 110, 0.15);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-top: 8rpx;
}

.tab-icon {
  font-size: 40rpx;
  color: #5a5a6a;
  transition: color 0.2s;
  line-height: 1;
}

.tab-label {
  font-size: 20rpx;
  color: #5a5a6a;
  margin-top: 4rpx;
  transition: color 0.2s;
}

.tab-item.active .tab-icon {
  color: #c9a96e;
}

.tab-item.active .tab-label {
  color: #c9a96e;
}

.tab-indicator {
  position: absolute;
  top: 0;
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #c9a96e, transparent);
  border-radius: 2rpx;
}
