.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 110rpx;
  background-color: rgba(247, 244, 240, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-top: 1rpx solid #e8e0d4;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding-top: 8rpx;
}

.tab-icon {
  font-size: 44rpx;
  color: #8a7a5a;
  transition: color 0.2s;
  line-height: 1;
}

.tab-label {
  font-size: 20rpx;
  color: #8a7a5a;
  margin-top: 4rpx;
  font-weight: 500;
  transition: color 0.2s;
}

.tab-item.active .tab-icon {
  color: #8b6914;
}

.tab-item.active .tab-label {
  color: #8b6914;
  font-weight: 600;
}
