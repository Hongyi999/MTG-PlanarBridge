page {
  background-color: #0f0f1a;
  color: #e0d8c8;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  /* Reserve space for custom tab bar */
  padding-bottom: 120rpx;
}

/* ---- Color Variables (via class names) ---- */
.text-gold { color: #c9a96e; }
.text-muted { color: #8a8a9a; }
.text-white { color: #ffffff; }
.text-light { color: #e0d8c8; }
.text-red { color: #f05d23; }
.text-green { color: #4ade80; }
.text-blue { color: #60a5fa; }

.bg-dark { background-color: #0f0f1a; }
.bg-card { background-color: #1a1a2e; }
.bg-surface { background-color: #252540; }
.bg-gold { background-color: #c9a96e; }

/* ---- Layout Helpers ---- */
.container {
  padding: 24rpx 32rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* ---- Cards / Panels ---- */
.card-panel {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.15);
}

.card-panel-highlight {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(201, 169, 110, 0.08);
}

/* ---- Section Headers ---- */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #c9a96e;
}

.section-subtitle {
  font-size: 24rpx;
  color: #8a8a9a;
  margin-left: 16rpx;
}

/* ---- Buttons ---- */
.btn-primary {
  background: linear-gradient(135deg, #c9a96e, #b8923e);
  color: #1a1a2e;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.btn-primary::after {
  border: none;
}

.btn-outline {
  background: transparent;
  color: #c9a96e;
  border: 1rpx solid #c9a96e;
  border-radius: 12rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  text-align: center;
}

.btn-outline::after {
  border: none;
}

/* ---- Tags / Badges ---- */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.tag-gold {
  background: rgba(201, 169, 110, 0.15);
  color: #c9a96e;
}

.tag-blue {
  background: rgba(96, 165, 250, 0.15);
  color: #60a5fa;
}

.tag-red {
  background: rgba(240, 93, 35, 0.15);
  color: #f05d23;
}

.tag-green {
  background: rgba(74, 222, 128, 0.15);
  color: #4ade80;
}

/* ---- Rarity Colors ---- */
.rarity-mythic { color: #f05d23; }
.rarity-rare { color: #c9a96e; }
.rarity-uncommon { color: #7c8ea0; }
.rarity-common { color: #555555; }

/* ---- Search Bar ---- */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #252540;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

.search-bar input {
  flex: 1;
  color: #e0d8c8;
  font-size: 28rpx;
}

.search-icon {
  color: #8a8a9a;
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* ---- Loading ---- */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  color: #8a8a9a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ---- Empty State ---- */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.4;
}

.empty-text {
  color: #8a8a9a;
  font-size: 28rpx;
}

/* ---- Divider ---- */
.divider {
  height: 1rpx;
  background: rgba(201, 169, 110, 0.1);
  margin: 24rpx 0;
}

/* ---- Price Display ---- */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.price-label {
  color: #8a8a9a;
  font-size: 26rpx;
}

.price-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #c9a96e;
}

.price-value-secondary {
  font-size: 26rpx;
  color: #8a8a9a;
}

/* ---- Avatar ---- */
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #252540;
}

.avatar-small {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: #252540;
}

/* ---- Mana Color Dots ---- */
.mana-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.mana-W { background-color: #f9faf4; }
.mana-U { background-color: #0e68ab; }
.mana-B { background-color: #150b00; border: 1rpx solid #555; }
.mana-R { background-color: #d3202a; }
.mana-G { background-color: #00733e; }
