page {
  background-color: #f7f4f0;
  color: #1a1a0a;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  padding-bottom: 120rpx;
}

/* ---- Color Variables (Fantasy Heritage) ---- */
.text-primary { color: #8b6914; }
.text-muted { color: #8a7a5a; }
.text-foreground { color: #1a1a0a; }
.text-white { color: #ffffff; }
.text-red { color: #dc2626; }
.text-green { color: #16a34a; }
.text-blue { color: #2563eb; }
.text-orange { color: #ea580c; }
.text-purple { color: #7c3aed; }

.bg-background { background-color: #f7f4f0; }
.bg-card { background-color: #ffffff; }
.bg-muted { background-color: #ede8e0; }
.bg-primary { background-color: #8b6914; }
.bg-primary-light { background-color: rgba(139, 105, 20, 0.08); }

/* ---- Layout Helpers ---- */
.container {
  padding: 24rpx 32rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* ---- Cards / Panels ---- */
.card-panel {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-panel-highlight {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(139, 105, 20, 0.06);
}

/* ---- Section Headers ---- */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8b6914;
}

.section-subtitle {
  font-size: 24rpx;
  color: #8a7a5a;
  margin-left: 16rpx;
}

/* ---- Buttons ---- */
.btn-primary {
  background: #8b6914;
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.btn-primary::after {
  border: none;
}

.btn-outline {
  background: transparent;
  color: #8b6914;
  border: 1rpx solid rgba(139, 105, 20, 0.3);
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  text-align: center;
}

.btn-outline::after {
  border: none;
}

/* ---- Tags / Badges ---- */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.tag-discussion {
  background: #eff6ff;
  color: #1d4ed8;
}

.tag-sell {
  background: #f0fdf4;
  color: #15803d;
}

.tag-buy {
  background: #fff7ed;
  color: #c2410c;
}

.tag-trade {
  background: #faf5ff;
  color: #7c3aed;
}

/* ---- Rarity Colors ---- */
.rarity-mythic { color: #ea580c; }
.rarity-rare { color: #ca8a04; }
.rarity-uncommon { color: #64748b; }
.rarity-common { color: #94a3b8; }

/* ---- Search Bar ---- */
.search-bar {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  padding: 18rpx 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.15);
}

.search-bar input {
  flex: 1;
  color: #1a1a0a;
  font-size: 28rpx;
}

.search-icon {
  color: #8a7a5a;
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* ---- Loading ---- */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139, 105, 20, 0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  color: #8a7a5a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ---- Empty State ---- */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
  color: #8a7a5a;
}

.empty-text {
  color: #8a7a5a;
  font-size: 28rpx;
}

.empty-sub-text {
  color: #a89a7a;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* ---- Divider ---- */
.divider {
  height: 1rpx;
  background: #e8e0d4;
  margin: 24rpx 0;
}

/* ---- Price Display ---- */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.price-label {
  color: #8a7a5a;
  font-size: 26rpx;
}

.price-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #8b6914;
  font-family: 'Menlo', 'Courier New', monospace;
}

.price-value-secondary {
  font-size: 22rpx;
  color: #8a7a5a;
  font-family: 'Menlo', 'Courier New', monospace;
}

/* ---- Avatar ---- */
.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #ede8e0;
  border: 2rpx solid rgba(139, 105, 20, 0.1);
}

.avatar-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #ede8e0;
}

.avatar-large {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid #8b6914;
}

/* ---- Mana Color Dots ---- */
.mana-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}
.mana-W { background-color: #F9F3E3; border: 1rpx solid #ddd; }
.mana-U { background-color: #1E78C8; }
.mana-B { background-color: #3B3B3B; }
.mana-R { background-color: #D32029; }
.mana-G { background-color: #00783E; }
.mana-C { background-color: #94a3b8; }

/* ---- Quick Action Card ---- */
.action-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx;
  background: #ffffff;
  border: 1rpx solid #e8e0d4;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.action-card:active {
  background: rgba(139, 105, 20, 0.04);
  border-color: rgba(139, 105, 20, 0.2);
}

.action-icon-box {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.action-icon-primary {
  background: rgba(139, 105, 20, 0.1);
  color: #8b6914;
}

.action-icon-orange {
  background: rgba(234, 88, 12, 0.1);
  color: #ea580c;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a0a;
}

.action-desc {
  font-size: 20rpx;
  color: #8a7a5a;
  margin-top: 4rpx;
}

/* ---- Pill Tab ---- */
.pill-tab {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  background: rgba(237, 232, 224, 0.5);
  color: #8a7a5a;
  white-space: nowrap;
}

.pill-tab.active {
  background: #1a1a0a;
  color: #ffffff;
}

/* ---- Floating Action Button ---- */
.fab-button {
  position: fixed;
  bottom: 180rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #1a1a0a;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
  z-index: 50;
  font-size: 40rpx;
}

/* ---- Modal / Sheet ---- */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f7f4f0;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  max-height: 80vh;
  z-index: 201;
}

.modal-handle {
  width: 64rpx;
  height: 6rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 3rpx;
  margin: 0 auto 24rpx;
}

/* ---- Format Legality ---- */
.legality-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.legality-legal {
  background: rgba(237, 232, 224, 0.5);
  color: #8a7a5a;
  border: 1rpx solid #e8e0d4;
}

.legality-banned {
  background: #fef2f2;
  color: #dc2626;
  border: 1rpx solid #fecaca;
}
