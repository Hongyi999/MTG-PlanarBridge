/* Profile (Me) Page Styles */

.profile-header {
  background: linear-gradient(135deg, #1a1a2e 0%, #252540 50%, #1a1a2e 100%);
  padding: 48rpx 32rpx;
  border-bottom: 1rpx solid rgba(201, 169, 110, 0.15);
}

.profile-info,
.profile-login-prompt {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #252540;
  border: 3rpx solid rgba(201, 169, 110, 0.3);
}

.profile-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-details {
  margin-left: 24rpx;
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #e0d8c8;
  display: block;
}

.profile-id {
  font-size: 24rpx;
  color: #8a8a9a;
  display: block;
  margin-top: 4rpx;
}

.profile-login-link {
  font-size: 28rpx;
  color: #c9a96e;
  display: block;
  margin-top: 8rpx;
}

/* Stats Bar */
.stats-bar {
  display: flex;
  align-items: center;
  background-color: #1a1a2e;
  padding: 24rpx 0;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #c9a96e;
}

.stat-label {
  font-size: 22rpx;
  color: #8a8a9a;
  margin-top: 4rpx;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: rgba(201, 169, 110, 0.15);
}

/* Menu */
.menu-section {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
  margin-bottom: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.03);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #252540;
}

.menu-icon {
  font-size: 36rpx;
  width: 56rpx;
  text-align: center;
  color: #c9a96e;
}

.menu-info {
  flex: 1;
  margin-left: 16rpx;
}

.menu-label {
  font-size: 28rpx;
  color: #e0d8c8;
  display: block;
}

.menu-desc {
  font-size: 22rpx;
  color: #5a5a6a;
  display: block;
  margin-top: 4rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #5a5a6a;
}

/* Logout */
.logout-section {
  margin-bottom: 32rpx;
}

/* About */
.about-section {
  text-align: center;
  padding: 32rpx 0 60rpx;
}

.about-text {
  font-size: 22rpx;
  color: #5a5a6a;
  display: block;
  line-height: 1.8;
}
