/* ======================================
   Profile Page — 我的 (Light Theme)
   ====================================== */

.page-me {
  background-color: #f7f4f0;
  min-height: 100vh;
  padding-bottom: 60rpx;
}

.px-container { padding: 0 32rpx; }

/* ---- Header ---- */
.me-header {
  padding: 48rpx 32rpx 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a0a;
}

/* ---- Profile Card ---- */
.profile-card {
  margin-bottom: 28rpx;
}

.profile-inner {
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 28rpx;
  border: 1rpx solid #e8e0d4;
  border-bottom: none;
}

.profile-row {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #ede8e0;
  border: 3rpx solid rgba(139, 105, 20, 0.2);
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-details {
  margin-left: 24rpx;
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a0a;
  display: block;
}

.profile-phone {
  font-size: 24rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 6rpx;
}

.profile-login-link {
  font-size: 28rpx;
  color: #8b6914;
  display: block;
  margin-top: 8rpx;
  font-weight: 500;
}

/* ---- Stats Row ---- */
.stats-row {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 0 0 20rpx 20rpx;
  padding: 24rpx 0;
  border: 1rpx solid #e8e0d4;
  border-top: 1rpx solid #f0ebe3;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #8b6914;
}

.stat-label {
  font-size: 22rpx;
  color: #8a7a5a;
  margin-top: 6rpx;
}

.stat-divider {
  width: 1rpx;
  height: 48rpx;
  background: #e8e0d4;
}

/* ---- Menu ---- */
.menu-section {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f0ebe3;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f7f4f0;
}

.menu-icon {
  font-size: 36rpx;
  width: 56rpx;
  text-align: center;
  color: #8b6914;
}

.menu-info {
  flex: 1;
  margin-left: 16rpx;
}

.menu-label {
  font-size: 30rpx;
  color: #1a1a0a;
  font-weight: 500;
  display: block;
}

.menu-desc {
  font-size: 22rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 4rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #c0b8a0;
}

/* ---- Logout ---- */
.logout-wrap {
  margin-bottom: 24rpx;
}

.logout-btn {
  background: #ffffff;
  border: 1rpx solid #e8e0d4;
  border-radius: 20rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 30rpx;
  color: #d32029;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.logout-btn:active {
  background-color: #fff5f5;
}

/* ---- About ---- */
.about-section {
  text-align: center;
  padding: 24rpx 0 40rpx;
}

.about-text {
  font-size: 22rpx;
  color: #a89a7a;
  display: block;
  line-height: 1.8;
}
