/* ======================================
   Home Page — 发现 (Light Fantasy Heritage)
   ====================================== */

.page-home {
  background-color: #f7f4f0;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* ---- Header ---- */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 48rpx 32rpx 8rpx;
}

.page-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #1a1a0a;
  letter-spacing: 2rpx;
}

/* ---- Padding wrapper ---- */
.px-container {
  padding: 0 32rpx;
}

/* ---- Search Bar ---- */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  margin: 16rpx 0 24rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.15);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  color: #1a1a0a;
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
}

/* ---- Quick Actions ---- */
.quick-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.action-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx;
  background: #ffffff;
  border: 1rpx solid #e8e0d4;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.action-card:active {
  background: rgba(139, 105, 20, 0.04);
}

.action-icon-box {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.action-icon-primary { background: rgba(139, 105, 20, 0.1); }
.action-icon-orange  { background: rgba(234, 88, 12, 0.1); }

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a0a;
  display: block;
}

.action-desc {
  font-size: 22rpx;
  color: #8a7a5a;
  margin-top: 4rpx;
  display: block;
}

/* ---- Section ---- */
.section {
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #8b6914;
}

/* ---- Market Rows (市场动向) ---- */
.market-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0ece4;
}

.market-row:last-child { border-bottom: none; }
.market-row:active { opacity: 0.7; }

.market-avatar {
  width: 72rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background-color: #ede8e0;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.market-info {
  flex: 1;
  min-width: 0;
}

.market-name-cn {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a0a;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.market-name-en {
  font-size: 22rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.market-price-col {
  text-align: right;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.market-price-cny {
  font-size: 30rpx;
  font-weight: 600;
  color: #8b6914;
  display: block;
  font-family: 'Menlo', monospace;
}

.market-price-usd {
  font-size: 20rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 2rpx;
  font-family: 'Menlo', monospace;
}

/* ---- Horizontal Cards (社区热门) ---- */
.card-h-scroll {
  width: 100%;
  white-space: nowrap;
}

.card-h-inner {
  display: inline-flex;
  gap: 20rpx;
  padding: 0 32rpx 12rpx;
}

.h-card {
  display: inline-flex;
  flex-direction: column;
  width: 220rpx;
  flex-shrink: 0;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.h-card:active { opacity: 0.8; }

.h-card-image {
  width: 220rpx;
  height: 308rpx;
  background-color: #ede8e0;
}

.h-card-info {
  padding: 12rpx 14rpx 14rpx;
  white-space: normal;
}

.h-card-name {
  font-size: 22rpx;
  font-weight: 600;
  color: #1a1a0a;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.h-card-price {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b6914;
  display: block;
  margin-top: 6rpx;
  font-family: 'Menlo', monospace;
}

.h-card-empty {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 200rpx;
}

/* ---- Format Grid ---- */
.format-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.format-cell {
  padding: 16rpx 28rpx;
  background: #ffffff;
  border: 1rpx solid #e8e0d4;
  border-radius: 20rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.format-cell:active {
  background: rgba(139, 105, 20, 0.08);
  border-color: rgba(139, 105, 20, 0.25);
}

.format-cell-label {
  font-size: 26rpx;
  color: #8b6914;
  font-weight: 500;
}

/* ---- Loading / Empty ---- */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139, 105, 20, 0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.loading-text {
  color: #8a7a5a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  font-size: 72rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.empty-text {
  color: #8a7a5a;
  font-size: 28rpx;
}
