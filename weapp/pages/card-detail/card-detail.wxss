/* ======================================
   Card Detail Page — 卡牌详情 (Light Theme)
   ====================================== */

.page-card-detail {
  background-color: #f7f4f0;
  min-height: 100vh;
}

/* ---- Loading ---- */
.loading-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139, 105, 20, 0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.loading-text {
  color: #8a7a5a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ---- Card Image ---- */
.card-image-section {
  background: linear-gradient(180deg, #ede8e0 0%, #f7f4f0 100%);
  padding: 40rpx 24rpx 32rpx;
  display: flex;
  justify-content: center;
}

.card-main-image {
  width: 500rpx;
  height: 700rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

/* ---- Info Body ---- */
.card-info-body {
  padding: 24rpx 32rpx 0;
}

/* ---- Title Row ---- */
.card-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.card-titles {
  flex: 1;
}

.card-display-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a0a;
  display: block;
}

.card-name-en {
  font-size: 26rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 4rpx;
}

/* ---- Mana Symbols ---- */
.mana-row {
  display: flex;
  gap: 6rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.mana-symbol {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #ede8e0;
  border: 1rpx solid #d0c8bc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #3a3a2a;
}

/* ---- Type Line ---- */
.card-type-line {
  font-size: 26rpx;
  color: #5a5a4a;
  display: block;
  margin-bottom: 8rpx;
  font-style: italic;
}

/* ---- Set Row ---- */
.card-set-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-set-name {
  font-size: 24rpx;
  color: #8a7a5a;
}

.card-rarity {
  font-size: 24rpx;
  font-weight: 600;
}

/* ---- Action Row ---- */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  align-items: center;
}

.follow-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #8b6914;
  background: rgba(139, 105, 20, 0.08);
  border: 1rpx solid rgba(139, 105, 20, 0.3);
}

.follow-btn-active {
  color: #ffffff;
  background: #8b6914;
  border-color: #8b6914;
}

.follow-btn:active {
  opacity: 0.8;
}

.share-btn {
  background: #ffffff;
  color: #8a7a5a;
  border: 1rpx solid #e8e0d4;
  border-radius: 16rpx;
  font-size: 26rpx;
  padding: 18rpx 28rpx;
  line-height: 1.5;
  box-shadow: none;
}

.share-btn::after {
  border: none;
}

/* ---- Divider ---- */
.divider {
  height: 1rpx;
  background: #e8e0d4;
  margin: 20rpx 0;
}

/* ---- Section Header ---- */
.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a0a;
}

.subsection-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #8a7a5a;
  display: block;
  margin-bottom: 16rpx;
}

/* ---- Price Card ---- */
.price-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0ebe3;
}

.price-row:last-child {
  border-bottom: none;
}

.price-label {
  font-size: 26rpx;
  color: #5a5a4a;
}

.price-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #8b6914;
  font-family: 'Menlo', monospace;
}

.price-value-secondary {
  font-size: 26rpx;
  font-weight: 500;
  color: #8a7a5a;
  font-family: 'Menlo', monospace;
}

.inner-divider {
  height: 1rpx;
  background: #e8e0d4;
  margin: 8rpx 0;
}

.no-price {
  text-align: center;
  padding: 20rpx 0;
}

.no-price-text {
  font-size: 26rpx;
  color: #a89a7a;
}

/* ---- Price History ---- */
.price-history-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price-history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0ebe3;
}

.price-history-label {
  font-size: 24rpx;
  color: #8a7a5a;
}

.price-history-val {
  font-size: 26rpx;
  color: #8b6914;
  font-weight: 600;
}

/* ---- Oracle Text ---- */
.oracle-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.oracle-text {
  font-size: 28rpx;
  color: #3a3a2a;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ---- Artist ---- */
.artist-row {
  margin-bottom: 20rpx;
}

.artist-text {
  font-size: 24rpx;
  color: #8a7a5a;
  font-style: italic;
}

/* ---- Legalities ---- */
.legalities-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.legality-item {
  width: calc(50% - 6rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  border: 1rpx solid #e8e0d4;
}

.legality-format {
  font-size: 24rpx;
  color: #5a5a4a;
  font-weight: 500;
}

.legality-status {
  font-size: 22rpx;
  color: #a89a7a;
}

.legality-status.legal {
  color: #16a34a;
  font-weight: 600;
}

.legality-status.banned {
  color: #dc2626;
  font-weight: 600;
}

.legality-status.restricted {
  color: #d97706;
  font-weight: 600;
}

/* ---- FAB Stats Row ---- */
.fab-stats-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 12rpx 0 16rpx;
}

.fab-stat-badge {
  padding: 8rpx 18rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: 1rpx solid;
}

.fab-stat-cost {
  background: rgba(239, 68, 68, 0.08);
  border-color: rgba(239, 68, 68, 0.3);
  color: #dc2626;
}

.fab-stat-pitch {
  background: rgba(59, 130, 246, 0.08);
  border-color: rgba(59, 130, 246, 0.3);
  color: #2563eb;
}

.fab-stat-power {
  background: rgba(249, 115, 22, 0.08);
  border-color: rgba(249, 115, 22, 0.3);
  color: #ea580c;
}

.fab-stat-defense {
  background: rgba(34, 197, 94, 0.08);
  border-color: rgba(34, 197, 94, 0.3);
  color: #16a34a;
}

.fab-stat-health {
  background: rgba(168, 85, 247, 0.08);
  border-color: rgba(168, 85, 247, 0.3);
  color: #9333ea;
}

/* ---- FAB Keywords ---- */
.fab-keywords-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.fab-keyword-tag {
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #8a7a5a;
  background: rgba(237, 232, 224, 0.5);
  border: 1rpx solid #e8e0d4;
}

/* ---- Add to List Button ---- */
.add-list-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #8b6914;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}

.add-list-btn:active { background: #7a5c10; }

/* ---- List Picker Modal ---- */
.list-picker-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  z-index: 300;
  display: flex;
  align-items: flex-end;
}

.list-picker-box {
  width: 100%;
  background: #faf8f5;
  border-radius: 32rpx 32rpx 0 0;
  padding-bottom: 40rpx;
  overflow: hidden;
}

.list-picker-handle {
  width: 80rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #d4c8b0;
  margin: 20rpx auto 0;
}

.list-picker-title {
  display: block;
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a0a;
  padding: 24rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #e8e0d4;
}

.list-picker-empty {
  padding: 48rpx 32rpx;
  text-align: center;
}

.list-picker-empty-text { font-size: 26rpx; color: #8a7a5a; }

.list-picker-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0ebe3;
}

.list-picker-row:active { background: rgba(139,105,20,0.04); }

.list-picker-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: 14rpx;
  background: rgba(139,105,20,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.list-picker-icon { font-size: 28rpx; color: #8b6914; }

.list-picker-info { flex: 1; }
.list-picker-name { font-size: 28rpx; font-weight: 600; color: #1a1a0a; display: block; }
.list-picker-count { font-size: 22rpx; color: #8a7a5a; display: block; margin-top: 4rpx; }
.list-picker-arrow { font-size: 36rpx; color: #c0b8a0; }

.list-picker-cancel {
  margin: 20rpx 32rpx 0;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  border: 1rpx solid #e8e0d4;
  background: #ffffff;
  font-size: 28rpx;
  color: #8a7a5a;
}

.list-picker-cancel:active { background: #f7f4f0; }
