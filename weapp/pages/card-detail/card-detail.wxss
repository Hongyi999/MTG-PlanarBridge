/* ======================================
   Card Detail Page — 卡牌详情 (Light Theme)
   ====================================== */

.page-card-detail {
  background-color: #f7f4f0;
  min-height: 100vh;
}

/* ---- Loading ---- */
.loading-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139, 105, 20, 0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.loading-text {
  color: #8a7a5a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ---- Card Image ---- */
.card-image-section {
  background: linear-gradient(180deg, #ede8e0 0%, #f7f4f0 100%);
  padding: 40rpx 24rpx 32rpx;
  display: flex;
  justify-content: center;
}

.card-main-image {
  width: 500rpx;
  height: 700rpx;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

/* ---- Info Body ---- */
.card-info-body {
  padding: 24rpx 32rpx 0;
}

/* ---- Title Row ---- */
.card-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.card-titles {
  flex: 1;
}

.card-display-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a0a;
  display: block;
}

.card-name-en {
  font-size: 26rpx;
  color: #8a7a5a;
  display: block;
  margin-top: 4rpx;
}

/* ---- Mana Symbols ---- */
.mana-row {
  display: flex;
  gap: 6rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.mana-symbol {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #ede8e0;
  border: 1rpx solid #d0c8bc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #3a3a2a;
}

/* ---- Type Line ---- */
.card-type-line {
  font-size: 26rpx;
  color: #5a5a4a;
  display: block;
  margin-bottom: 8rpx;
  font-style: italic;
}

/* ---- Set Row ---- */
.card-set-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-set-name {
  font-size: 24rpx;
  color: #8a7a5a;
}

.card-rarity {
  font-size: 24rpx;
  font-weight: 600;
}

/* ---- Action Row ---- */
.action-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  align-items: center;
}

.follow-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #8b6914;
  background: rgba(139, 105, 20, 0.08);
  border: 1rpx solid rgba(139, 105, 20, 0.3);
}

.follow-btn-active {
  color: #ffffff;
  background: #8b6914;
  border-color: #8b6914;
}

.follow-btn:active {
  opacity: 0.8;
}

.share-btn {
  background: #ffffff;
  color: #8a7a5a;
  border: 1rpx solid #e8e0d4;
  border-radius: 16rpx;
  font-size: 26rpx;
  padding: 18rpx 28rpx;
  line-height: 1.5;
  box-shadow: none;
}

.share-btn::after {
  border: none;
}

/* ---- Divider ---- */
.divider {
  height: 1rpx;
  background: #e8e0d4;
  margin: 20rpx 0;
}

/* ---- Section Header ---- */
.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a0a;
}

.subsection-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #8a7a5a;
  display: block;
  margin-bottom: 16rpx;
}

/* ---- Price Card ---- */
.price-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0ebe3;
}

.price-row:last-child {
  border-bottom: none;
}

.price-label {
  font-size: 26rpx;
  color: #5a5a4a;
}

.price-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #8b6914;
  font-family: 'Menlo', monospace;
}

.price-value-secondary {
  font-size: 26rpx;
  font-weight: 500;
  color: #8a7a5a;
  font-family: 'Menlo', monospace;
}

.inner-divider {
  height: 1rpx;
  background: #e8e0d4;
  margin: 8rpx 0;
}

.no-price {
  text-align: center;
  padding: 20rpx 0;
}

.no-price-text {
  font-size: 26rpx;
  color: #a89a7a;
}

/* ---- Price History ---- */
.price-history-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price-history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0ebe3;
}

.price-history-label {
  font-size: 24rpx;
  color: #8a7a5a;
}

.price-history-val {
  font-size: 26rpx;
  color: #8b6914;
  font-weight: 600;
}

/* ---- Oracle Text ---- */
.oracle-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.oracle-text {
  font-size: 28rpx;
  color: #3a3a2a;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* ---- Artist ---- */
.artist-row {
  margin-bottom: 20rpx;
}

.artist-text {
  font-size: 24rpx;
  color: #8a7a5a;
  font-style: italic;
}

/* ---- Legalities ---- */
.legalities-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.legality-item {
  width: calc(50% - 6rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  border: 1rpx solid #e8e0d4;
}

.legality-format {
  font-size: 24rpx;
  color: #5a5a4a;
  font-weight: 500;
}

.legality-status {
  font-size: 22rpx;
  color: #a89a7a;
}

.legality-status.legal {
  color: #16a34a;
  font-weight: 600;
}

.legality-status.banned {
  color: #dc2626;
  font-weight: 600;
}

.legality-status.restricted {
  color: #d97706;
  font-weight: 600;
}
