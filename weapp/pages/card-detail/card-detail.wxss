/* Card Detail Page Styles */

.page-card-detail {
  padding-bottom: 0;
}

.card-image-section {
  background: linear-gradient(180deg, #252540 0%, #0f0f1a 100%);
  padding: 24rpx;
  display: flex;
  justify-content: center;
}

.card-main-image {
  width: 500rpx;
  height: 700rpx;
  border-radius: 16rpx;
}

.card-title-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.card-titles {
  flex: 1;
}

.card-display-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #e0d8c8;
  display: block;
}

.card-name-en {
  font-size: 28rpx;
  color: #8a8a9a;
  display: block;
  margin-top: 4rpx;
}

.mana-row {
  display: flex;
  gap: 6rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  margin-top: 8rpx;
}

.mana-symbol {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #252540;
  border: 1rpx solid #555;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #e0d8c8;
}

.card-type-line {
  font-size: 28rpx;
  color: #c0b8a8;
  display: block;
  margin-bottom: 8rpx;
}

.card-set-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-set-name {
  font-size: 24rpx;
  color: #8a8a9a;
}

.card-rarity {
  font-size: 24rpx;
  font-weight: 600;
}

.follow-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.share-btn {
  background: transparent;
  color: #8a8a9a;
  border: 1rpx solid rgba(138, 138, 154, 0.3);
  border-radius: 12rpx;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  line-height: 1.5;
}

.share-btn::after {
  border: none;
}

.oracle-text {
  font-size: 28rpx;
  color: #c0b8a8;
  line-height: 1.8;
  white-space: pre-wrap;
}

/* Price History */
.price-history-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.price-history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.03);
}

/* Legalities */
.legalities-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.legality-item {
  width: calc(50% - 6rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #1a1a2e;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.legality-format {
  font-size: 24rpx;
  color: #8a8a9a;
}

.legality-status {
  font-size: 22rpx;
  color: #5a5a6a;
}

.legality-status.legal {
  color: #4ade80;
}

.legality-status.banned {
  color: #f05d23;
}

.legality-status.restricted {
  color: #fbbf24;
}
