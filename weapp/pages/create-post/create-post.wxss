/* Create Post Page Styles */

.type-selector {
  display: flex;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.type-option {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #8a8a9a;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.type-option.active {
  color: #1a1a2e;
  background: linear-gradient(135deg, #c9a96e, #b8923e);
  border-color: transparent;
  font-weight: 600;
}

.content-area {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
  position: relative;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  color: #e0d8c8;
  font-size: 28rpx;
  line-height: 1.7;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #5a5a6a;
  display: block;
  margin-top: 8rpx;
}

.price-input-row {
  display: flex;
  align-items: center;
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

.price-input-label {
  color: #8a8a9a;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.price-input {
  flex: 1;
  color: #c9a96e;
  font-size: 32rpx;
  font-weight: 600;
}

/* Image Grid */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.image-preview-item {
  position: relative;
  width: calc(33.33% - 8rpx);
}

.image-preview {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #252540;
}

.image-remove {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(240, 93, 35, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  line-height: 1;
}

.image-add-btn {
  width: calc(33.33% - 8rpx);
  height: 200rpx;
  border-radius: 12rpx;
  border: 2rpx dashed rgba(201, 169, 110, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(201, 169, 110, 0.05);
}

.image-add-btn:active {
  background: rgba(201, 169, 110, 0.1);
}

.image-add-icon {
  font-size: 48rpx;
  color: #c9a96e;
  line-height: 1;
}

.image-add-text {
  font-size: 22rpx;
  color: #8a8a9a;
  margin-top: 8rpx;
}

/* Card Search */
.card-search-row {
  display: flex;
  align-items: center;
}

.card-search-input {
  flex: 1;
  background: #1a1a2e;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  color: #e0d8c8;
  font-size: 28rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

/* Linked Card Preview */
.linked-card-preview {
  display: flex;
  align-items: center;
  background: #1a1a2e;
  border-radius: 12rpx;
  padding: 16rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.2);
}

.linked-preview-image {
  width: 60rpx;
  height: 84rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  background-color: #252540;
}

.linked-preview-info {
  flex: 1;
}

.linked-preview-name {
  font-size: 26rpx;
  color: #c9a96e;
  display: block;
}

.linked-preview-name-en {
  font-size: 22rpx;
  color: #8a8a9a;
  display: block;
}

.linked-remove {
  font-size: 32rpx;
  color: #5a5a6a;
  padding: 8rpx 16rpx;
}

/* Submit */
.submit-section {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  padding: 24rpx;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.submit-btn.disabled {
  opacity: 0.5;
}
