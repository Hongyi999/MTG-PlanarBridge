/* Price Lists Page */

.pl-page {
  background: #f7f4f0;
  min-height: 100vh;
  padding-bottom: 48rpx;
}

/* Header */
.pl-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 16rpx;
}

.pl-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a0a;
}

.pl-add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  background: #8b6914;
}

.pl-add-btn:active { background: #7a5c10; }

.pl-add-icon { font-size: 24rpx; color: #ffffff; }
.pl-add-text { font-size: 24rpx; color: #ffffff; font-weight: 600; }

/* Loading */
.pl-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  gap: 24rpx;
}

.pl-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139,105,20,0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.pl-loading-text { font-size: 26rpx; color: #8a7a5a; }

/* Empty */
.pl-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 48rpx;
  gap: 16rpx;
}

.pl-empty-icon { font-size: 64rpx; color: #c4b89a; }
.pl-empty-title { font-size: 28rpx; color: #8a7a5a; font-weight: 500; }
.pl-empty-sub { font-size: 24rpx; color: #a89a7a; text-align: center; }

/* Lists */
.pl-list {
  padding: 8rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.pl-list-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.pl-list-item:active { background: #f7f4f0; }

.pl-list-icon-wrap {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: rgba(139,105,20,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.pl-list-icon { font-size: 32rpx; color: #8b6914; }

.pl-list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.pl-list-name { font-size: 28rpx; font-weight: 600; color: #1a1a0a; }
.pl-list-count { font-size: 22rpx; color: #8a7a5a; }

.pl-list-arrow { font-size: 36rpx; color: #c0b8a0; }

.pl-delete-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(220,38,38,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.pl-delete-btn:active { background: rgba(220,38,38,0.18); }
.pl-delete-icon { font-size: 24rpx; color: #dc2626; }

/* Hints */
.pl-hints {
  padding: 32rpx 32rpx 0;
}

.pl-hints-label {
  font-size: 22rpx;
  color: #a89a7a;
  display: block;
  margin-bottom: 16rpx;
}

.pl-hint-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.pl-hint-tag {
  padding: 10rpx 24rpx;
  border-radius: 40rpx;
  border: 1rpx dashed rgba(139,105,20,0.3);
  font-size: 24rpx;
  color: #8b6914;
  background: rgba(139,105,20,0.05);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.45);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-box {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 36rpx;
  width: 600rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.15);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a0a;
  display: block;
  margin-bottom: 28rpx;
}

.modal-input {
  width: 100%;
  background: #f7f4f0;
  border: 1rpx solid #e8e0d4;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1a1a0a;
  box-sizing: border-box;
  margin-bottom: 28rpx;
}

.modal-btns {
  display: flex;
  gap: 16rpx;
}

.modal-cancel {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  border: 1rpx solid #e8e0d4;
  font-size: 28rpx;
  color: #8a7a5a;
}

.modal-cancel:active { background: #f7f4f0; }

.modal-confirm {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background: #8b6914;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}

.modal-confirm:active { background: #7a5c10; }

/* Items view header */
.pl-items-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  gap: 16rpx;
  border-bottom: 1rpx solid #e8e0d4;
}

.pl-back-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  flex-shrink: 0;
}

.pl-back-icon { font-size: 36rpx; color: #8b6914; }
.pl-back-text { font-size: 28rpx; color: #8b6914; }

.pl-items-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a0a;
  text-align: center;
}

.pl-export-btn {
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(139,105,20,0.3);
  flex-shrink: 0;
}

.pl-export-btn:active { background: rgba(139,105,20,0.08); }
.pl-export-text { font-size: 24rpx; color: #8b6914; }

/* Items list */
.pl-items-list {
  padding: 16rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.pl-item-card {
  display: flex;
  gap: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
  border: 1rpx solid #e8e0d4;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

/* Item thumbnail */
.pl-item-img-wrap {
  width: 80rpx;
  height: 112rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #e8e0d4;
}

.pl-item-img { width: 100%; height: 100%; }

.pl-item-img-ph {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8e0d4, #d4c8b0);
}

.pl-item-img-ph-text { font-size: 18rpx; color: #a89a7a; font-weight: 700; }

/* Item info */
.pl-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pl-item-name { font-size: 26rpx; font-weight: 600; color: #1a1a0a; }

.pl-item-meta {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.pl-item-set { font-size: 20rpx; color: #8a7a5a; font-family: 'Menlo', monospace; }

.pl-item-cond {
  font-size: 18rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  background: rgba(139,105,20,0.1);
  color: #8b6914;
  font-weight: 600;
}

.pl-item-price-row { display: flex; align-items: center; gap: 12rpx; }
.pl-item-price { font-size: 26rpx; font-weight: 700; color: #8b6914; font-family: 'Menlo', monospace; }
.pl-item-qty { font-size: 22rpx; color: #8a7a5a; }

.pl-item-actions { display: flex; gap: 16rpx; margin-top: 4rpx; }

.pl-item-edit-btn {
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(139,105,20,0.3);
  font-size: 22rpx;
  color: #8b6914;
}

.pl-item-remove-btn {
  padding: 8rpx 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(220,38,38,0.25);
  font-size: 22rpx;
  color: #dc2626;
}

/* Edit state */
.pl-item-edit {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.pl-edit-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.pl-edit-label { font-size: 24rpx; color: #8a7a5a; width: 80rpx; flex-shrink: 0; }

.pl-edit-input {
  flex: 1;
  background: #f7f4f0;
  border: 1rpx solid #e8e0d4;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #1a1a0a;
}

.pl-edit-picker { flex: 1; }

.pl-edit-picker view {
  background: #f7f4f0;
  border: 1rpx solid #e8e0d4;
  border-radius: 10rpx;
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #1a1a0a;
}

.pl-edit-btns { display: flex; gap: 12rpx; margin-top: 4rpx; }

.pl-edit-cancel {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  border: 1rpx solid #e8e0d4;
  font-size: 26rpx;
  color: #8a7a5a;
}

.pl-edit-save {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  background: #8b6914;
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}
