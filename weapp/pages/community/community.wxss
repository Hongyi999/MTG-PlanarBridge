/* Community Page Styles */

.filter-bar {
  background-color: #1a1a2e;
  border-bottom: 1rpx solid rgba(201, 169, 110, 0.1);
  padding: 16rpx 0;
}

.filter-scroll {
  white-space: nowrap;
  padding: 0 24rpx;
}

.filter-tab {
  display: inline-block;
  padding: 10rpx 28rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #8a8a9a;
  background: rgba(255, 255, 255, 0.05);
}

.filter-tab.active {
  color: #1a1a2e;
  background: linear-gradient(135deg, #c9a96e, #b8923e);
  font-weight: 600;
}

/* Post Card */
.community-post {
  background-color: #1a1a2e;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.08);
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #252540;
}

.post-header-info {
  flex: 1;
  margin-left: 12rpx;
}

.post-author-name {
  font-size: 28rpx;
  color: #e0d8c8;
  font-weight: 500;
  display: block;
}

.post-time-text {
  font-size: 22rpx;
  color: #5a5a6a;
  display: block;
  margin-top: 2rpx;
}

.post-body {
  font-size: 28rpx;
  color: #c0b8a8;
  line-height: 1.7;
  display: block;
  margin-bottom: 16rpx;
  white-space: pre-wrap;
}

/* Post Images */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.post-image {
  border-radius: 12rpx;
  background-color: #252540;
}

.post-image.single {
  width: 100%;
  height: 400rpx;
}

.post-image.double {
  width: calc(50% - 4rpx);
  height: 300rpx;
}

.post-image.triple {
  width: calc(33.33% - 6rpx);
  height: 240rpx;
}

/* Linked Card */
.post-linked-card {
  display: flex;
  align-items: center;
  background-color: #252540;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(201, 169, 110, 0.1);
}

.post-linked-card:active {
  background-color: #303050;
}

.linked-card-image {
  width: 60rpx;
  height: 84rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
  background-color: #1a1a2e;
}

.linked-card-info {
  flex: 1;
}

.linked-card-name {
  font-size: 26rpx;
  color: #c9a96e;
  display: block;
}

.linked-card-price {
  font-size: 24rpx;
  color: #8a8a9a;
  display: block;
  margin-top: 4rpx;
}

/* Post Actions */
.post-actions {
  display: flex;
  gap: 32rpx;
}

.post-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.post-action:active {
  opacity: 0.7;
}

.action-icon {
  font-size: 28rpx;
  color: #5a5a6a;
}

.action-count {
  font-size: 24rpx;
  color: #5a5a6a;
}

/* FAB (Floating Action Button) */
.fab-button {
  position: fixed;
  right: 32rpx;
  bottom: 160rpx;
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #c9a96e, #b8923e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(201, 169, 110, 0.3);
  z-index: 100;
}

.fab-button:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.fab-icon {
  font-size: 48rpx;
  color: #1a1a2e;
  font-weight: 300;
  line-height: 1;
}
