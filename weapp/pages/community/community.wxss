/* Community Page Styles â€” matching React community.tsx */

.page-community {
  background: #f7f4f0;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* Header */
.comm-header {
  padding: 32rpx 32rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a0a;
}

.px-container { padding-left: 32rpx; padding-right: 32rpx; }

/* Filter tabs */
.filter-bar {
  padding: 0 32rpx 20rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tab {
  display: inline-block;
  padding: 12rpx 28rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #8a7a5a;
  background: rgba(255,255,255,0.5);
  border: 1rpx solid #e8e0d4;
  margin-right: 16rpx;
  font-weight: 500;
}

.filter-tab.active {
  background: #8b6914;
  color: #ffffff;
  border-color: #8b6914;
}

/* Loading */
.loading-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  gap: 24rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139,105,20,0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #8a7a5a;
}

/* Posts list */
.posts-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-top: 8rpx;
}

/* Post card */
.community-post {
  background: #ffffff;
  border-radius: 24rpx;
  border: 1rpx solid #e8e0d4;
  padding: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

/* Post header */
.post-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.avatar-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1rpx solid #e8e0d4;
  flex-shrink: 0;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0ebe3;
}

.post-header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.post-author-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a0a;
}

.post-time-text {
  font-size: 22rpx;
  color: #a89a7a;
}

/* Type badges */
.type-tag {
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 600;
}

.tag-discussion { background: rgba(139,105,20,0.1); color: #8b6914; }
.tag-sell       { background: rgba(234,88,12,0.1);  color: #ea580c; }
.tag-buy        { background: rgba(21,128,61,0.1);  color: #15803d; }
.tag-trade      { background: rgba(30,64,175,0.1);  color: #1e40af; }

/* Post body */
.post-body {
  font-size: 28rpx;
  color: #1a1a0a;
  line-height: 1.7;
  display: block;
  margin-bottom: 16rpx;
}

/* Post images */
.post-images {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.post-image {
  border-radius: 12rpx;
  overflow: hidden;
}

.post-image.single {
  width: 100%;
  height: 300rpx;
}

.post-image.double {
  width: calc(50% - 4rpx);
  height: 220rpx;
}

.post-image.triple {
  width: calc(33.33% - 6rpx);
  height: 180rpx;
}

/* Linked card */
.post-linked-card {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f7f4f0;
  border-radius: 16rpx;
  border: 1rpx solid #e8e0d4;
  margin-bottom: 16rpx;
}

.linked-card-image {
  width: 60rpx;
  height: 84rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.linked-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.linked-card-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #1a1a0a;
}

.linked-card-price {
  font-size: 24rpx;
  color: #8b6914;
  font-weight: 600;
  font-family: 'Menlo', monospace;
}

/* Post actions */
.post-actions {
  display: flex;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0ebe3;
}

.post-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  font-size: 28rpx;
  color: #a89a7a;
}

.action-count {
  font-size: 24rpx;
  color: #8a7a5a;
}

/* Empty state */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 48rpx;
  gap: 16rpx;
}

.empty-icon { font-size: 64rpx; }
.empty-title { font-size: 28rpx; color: #8a7a5a; font-weight: 500; }
.empty-sub { font-size: 24rpx; color: #a89a7a; }

/* FAB create button */
.fab-button {
  position: fixed;
  right: 48rpx;
  bottom: 140rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #8b6914;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(139,105,20,0.4);
  z-index: 100;
}

.fab-button:active { background: #7a5c10; }

.fab-icon {
  font-size: 40rpx;
  color: #ffffff;
}
