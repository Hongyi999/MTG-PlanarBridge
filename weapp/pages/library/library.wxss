/* Library Page Styles */

.filter-icon {
  color: #c9a96e;
  font-size: 36rpx;
  margin-left: 16rpx;
  padding: 4rpx 8rpx;
}

.filters-panel {
  animation: slideDown 0.2s ease-out;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.filter-section {
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #8a8a9a;
  margin-bottom: 12rpx;
  display: block;
}

.color-row {
  display: flex;
  gap: 20rpx;
}

.color-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  opacity: 0.5;
  transition: opacity 0.2s;
}

.color-btn.selected {
  opacity: 1;
  box-shadow: 0 0 12rpx rgba(201, 169, 110, 0.5);
}

.color-check {
  color: #c9a96e;
  font-size: 28rpx;
  font-weight: bold;
  text-shadow: 0 0 4rpx rgba(0, 0, 0, 0.8);
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #8a8a9a;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  text-transform: capitalize;
}

.filter-tag.active {
  color: #c9a96e;
  background: rgba(201, 169, 110, 0.15);
  border-color: rgba(201, 169, 110, 0.3);
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.results-info {
  margin-bottom: 16rpx;
}

/* Card Grid */
.card-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.grid-card {
  width: calc(50% - 10rpx);
  background-color: #1a1a2e;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid rgba(201, 169, 110, 0.12);
}

.grid-card:active {
  opacity: 0.85;
}

.grid-card-image {
  width: 100%;
  height: 440rpx;
  background-color: #252540;
}

.grid-card-info {
  padding: 12rpx 16rpx 16rpx;
}

.grid-card-name {
  font-size: 26rpx;
  color: #e0d8c8;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 500;
}

.grid-card-name-en {
  font-size: 22rpx;
  color: #8a8a9a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 2rpx;
}

.grid-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.grid-card-set {
  font-size: 22rpx;
  color: #5a5a6a;
  text-transform: uppercase;
}

.grid-card-price {
  margin-top: 8rpx;
  display: flex;
  align-items: baseline;
}
