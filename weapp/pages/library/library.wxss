/* ======================================
   Library Page — 卡牌库 (Light Theme)
   ====================================== */

.page-library {
  background-color: #f7f4f0;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.px-container { padding: 0 32rpx; }

/* ---- Header ---- */
.lib-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 48rpx 32rpx 12rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a0a;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.game-switch-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.3);
  border-radius: 20rpx;
  background: #ffffff;
}

.game-switch-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b6914;
}

.filter-btn {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border: 1rpx solid #e8e0d4;
  border-radius: 20rpx;
  background: #ffffff;
}

.filter-btn-text {
  font-size: 24rpx;
  color: #1a1a0a;
  font-weight: 500;
}

.filter-dot {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 12rpx;
  height: 12rpx;
  background: #8b6914;
  border-radius: 50%;
}

/* ---- Search Bar ---- */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  margin: 12rpx 0 16rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.15);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  color: #1a1a0a;
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
}

.search-clear {
  padding: 4rpx 8rpx;
}

.results-info { margin-bottom: 16rpx; }

.results-text {
  font-size: 24rpx;
  color: #8a7a5a;
}

/* ---- Filters Panel ---- */
.filters-panel {
  margin-bottom: 20rpx;
}

.filters-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.filter-section {
  margin-bottom: 24rpx;
}

.filter-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #8a7a5a;
  margin-bottom: 14rpx;
  display: block;
}

.color-row {
  display: flex;
  gap: 20rpx;
}

.color-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.45;
  border: 2rpx solid transparent;
}

.color-btn.selected {
  opacity: 1;
  box-shadow: 0 0 0 3rpx rgba(139, 105, 20, 0.4);
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.filter-tag {
  padding: 10rpx 22rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #8a7a5a;
  background: rgba(237, 232, 224, 0.5);
  border: 1rpx solid #e8e0d4;
}

.filter-tag.active {
  background: #1a1a0a;
  color: #ffffff;
  border-color: #1a1a0a;
}

.filter-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 8rpx;
}

.filter-clear-btn {
  padding: 12rpx 28rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #8a7a5a;
  border: 1rpx solid #e8e0d4;
  background: #ffffff;
}

.filter-apply-btn {
  padding: 12rpx 28rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  background: #8b6914;
}

/* ---- Card Grid ---- */
.card-grid-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.grid-card {
  width: calc(50% - 10rpx);
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #e8e0d4;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.grid-card:active { opacity: 0.85; }

.grid-card-image {
  width: 100%;
  height: 420rpx;
  background-color: #ede8e0;
  display: block;
}

.grid-card-body {
  padding: 12rpx 14rpx 16rpx;
}

.grid-card-cn {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a0a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.grid-card-en {
  font-size: 20rpx;
  color: #8a7a5a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-top: 2rpx;
}

.grid-card-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.grid-card-set {
  font-size: 20rpx;
  color: #8a7a5a;
}

.grid-card-rarity {
  font-size: 20rpx;
  font-weight: 600;
}

.grid-card-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #8b6914;
  display: block;
  margin-top: 6rpx;
  font-family: 'Menlo', monospace;
}

/* ---- Load More ---- */
.load-more-wrap {
  padding-bottom: 32rpx;
  text-align: center;
}

.load-more-btn {
  display: inline-block;
  padding: 16rpx 48rpx;
  border: 1rpx solid rgba(139, 105, 20, 0.3);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #8b6914;
  background: #ffffff;
}

/* ---- Loading ---- */
.loading-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(139, 105, 20, 0.2);
  border-top: 4rpx solid #8b6914;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

.loading-text {
  color: #8a7a5a;
  font-size: 26rpx;
  margin-top: 16rpx;
}

/* ---- Empty States ---- */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0 60rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8a7a5a;
}

.empty-sub {
  font-size: 24rpx;
  color: #a89a7a;
  margin-top: 8rpx;
}
